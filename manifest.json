{
    "name": "WTFrudoing",
    "version": "0.1.0",
    "description": "See, what are you doing",
    "author": "Mocoven",
    "icons": {
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_title": "",
        "default_icon": "images/icon_128.png",
        "default_popup": "pages/popup.html"
    },
    "manifest_version": 2,
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*",
            "file:///*/*"
        ],
        "js": [
            "libs/jquery-2.0.3.js",
            "js/content_script.js"
        ]
    }],
    "web_accessible_resources": [
        "data/whitelist.json"
    ]
}